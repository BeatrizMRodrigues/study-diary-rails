<% study_item.errors.full_messages.each do |message| %>
    <p><%= message %></p>
  <% end %>
  <%= form_with(model: study_item) do |f| %>
    <div>
      <%= f.label :title, 'Título' %>
      <%= f.text_field :title, required: "required"  %>
    </div>
    <div>
      <%= f.label :category_id, 'Categoria' %>
      <%= f.collection_select :category_id, Category.all, :id, :title %>
    </div>
    <div>
      <span>Feito?</span>
      <%= f.label :status, 'Sim' %>
      <%= f.radio_button :stauts, 'true' %>
      <%= f.label :status, 'Não' %>
      <%= f.radio_button :status, 'false' %>
    </div>
  
    <%= f.submit %>
  <% end %>